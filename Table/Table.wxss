.scroll-table{
  white-space: nowrap;
  display: flex;
}
.table{
  display: inline-block;
  padding-left:30px;
  width:60px;
  height:40px;
  line-height: 40px;
  font-size:14px;
  text-align: center
}
.table:first-child{
  padding-left:0;
}
.table-title{
  background: #f5f5f5;
}
.table-data:nth-child(odd){
  display: inline-block;
   background: rgb(225, 245, 252);
}